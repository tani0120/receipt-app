{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false
    },
    "include": [
        "src/server.ts",
        "src/api/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/components",
        "src/views"
    ]
}