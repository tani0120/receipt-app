# Server Configuration
PORT=3000

# Feature Flags
ENABLE_REAL_FIRESTORE=true
ENABLE_REAL_GEMINI=true

# Firebase Admin SDK (Service Account)
# Get these from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com
# For the private key, copy the entire string including -----BEGIN PRIVATE KEY----- ...
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# Gemini API
# [Action Required] Set to 'true' to use Vertex AI (Service Account), 'false' for AI Studio (API Key)
USE_VERTEX_AI=true
# [Action Required] Paste your Gemini API Key here (Required if USE_VERTEX_AI=false)
GEMINI_API_KEY=your-gemini-api-key
